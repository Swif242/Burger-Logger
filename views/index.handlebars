<h1 id="header">This is all about burgers!!</h1>



<div id="row-1" class="row">
    <div class="col-6" style="background-color: aqua; height:350px;">
        <h3 style="text-align: center; text-decoration: underline; ">Burgers</h3>
        <ul>
            {{#each burgers_name}}
            {{/each}}
        </ul>
    </div>
    <div class="col-6" style="background-color: rgb(20, 60, 190); height:350px;">
        <h3 style="text-align: center; text-decoration: underline;">Devoured</h3>
        <ul>
            {{#each burgers_name}}
            {{#if Devoured}}
            {{!-- {{> cats/cat-block sleep=false}} --}}
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>


<div id="row-2" class="row">
    <div class="col-12"
        style="background-color: darkslateblue; width:100%; height:150px; text-align: center; padding-top:15px;">
        <form >
            <input type="text" id="burger" name="name">
            <button id="add" type="submit">Add burger</button>
        </form>
    </div>
</div>



<script type="text/javascript">
    $("#add").on("click", function (event) {
        // Make sure to preventDefault on a submit event.
        event.preventDefault();
        console.log("worked!!")

        // [name=plan] will find an element with a "name" attribute equal to the string "plan"
        let newBurger = {
            name: $("#add [name=name]").val().trim()
        };

        // Send the POST request.
        $.ajax("/api/burgers", {
            type: "POST",
            data: newBurger
        }).then(
            function () {
                console.log("created new burger");
                // Reload the page to get the updated list
                location.reload();
            }
        );
    });



</script>